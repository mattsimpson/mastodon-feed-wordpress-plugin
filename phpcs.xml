<?xml version="1.0"?>
<ruleset name="Mastodon Feed Plugin">
	<description>WordPress Coding Standards for Mastodon Feed Plugin</description>

	<!-- What to scan -->
	<file>.</file>

	<!-- Exclude paths -->
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/tests/*</exclude-pattern>
	<exclude-pattern>*/build/*</exclude-pattern>
	<exclude-pattern>*/src/*</exclude-pattern>
	<exclude-pattern>*/dist/*</exclude-pattern>
	<exclude-pattern>*/templates/*</exclude-pattern>
	<exclude-pattern>*.js</exclude-pattern>
	<exclude-pattern>*.css</exclude-pattern>

	<!-- Show progress and sniff codes -->
	<arg value="ps"/>

	<!-- Use colors in output -->
	<arg name="colors"/>

	<!-- Check up to 8 files simultaneously -->
	<arg name="parallel" value="8"/>

	<!-- Only check PHP files -->
	<arg name="extensions" value="php"/>

	<!-- Use WordPress Coding Standards -->
	<rule ref="WordPress-Core">
		<!-- Allow short array syntax -->
		<exclude name="Generic.Arrays.DisallowShortArraySyntax"/>

		<!-- Allow array() in comments for documentation -->
		<exclude name="Squiz.PHP.CommentedOutCode.Found"/>
	</rule>

	<rule ref="WordPress-Docs">
		<!-- Allow missing @param tags for obvious parameters -->
		<exclude name="Squiz.Commenting.FunctionComment.MissingParamTag"/>
	</rule>

	<!-- Check for PHP cross-version compatibility -->
	<config name="testVersion" value="7.4-"/>
	<rule ref="PHPCompatibility"/>

	<!-- Allow plugin-specific naming conventions -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array">
				<element value="mastodon_feed"/>
				<element value="IncludeMastodonFeedPlugin"/>
			</property>
		</properties>
	</rule>

	<!-- Allow WordPress.org plugin header format -->
	<rule ref="Squiz.Commenting.FileComment">
		<exclude-pattern>mastodon-feed.php</exclude-pattern>
	</rule>

	<!-- Allow commented-out code examples without punctuation in config file -->
	<rule ref="Squiz.Commenting.InlineComment.InvalidEndChar">
		<exclude-pattern>config-example.php</exclude-pattern>
	</rule>

</ruleset>
